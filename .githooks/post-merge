#!/bin/bash

# –ò—Å–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –ø—Ä–∞–≤ —Ñ–∞–π–ª–æ–≤ –ø–æ—Å–ª–µ git pull
echo "üîß Fixing file permissions after git pull..."

# –£–±–µ–¥–∏—Ç—å—Å—è —á—Ç–æ —Ç–µ–∫—É—â–∏–π –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –≤–ª–∞–¥–µ–µ—Ç –≤—Å–µ–º–∏ —Ñ–∞–π–ª–∞–º–∏
if [ -w . ]; then
    find . -type f -name "*.yml" -o -name "*.yaml" -o -name "*.json" -o -name "*.conf" | xargs chmod 644 2>/dev/null || true
    find . -type d | xargs chmod 755 2>/dev/null || true
    echo "‚úÖ File permissions fixed"
else
    echo "‚ö†Ô∏è Cannot fix permissions - insufficient rights"
fi 